                            android:fontFamily="@font/proxima_nova_bold"
                            android:text="Pink Guy"
                            android:textColor="#ffffff"
                            android:textSize="17dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="165dp"
