                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        android:src="@drawable/joji_ballads" />

                    <TextView
                        android:layout_width="94dp"
                        android:layout_height="37dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="72dp"
                        android:layout_marginLeft="72dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="19dp"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:text="BALLADS 1"
                        android:textColor="@color/white"
                        android:textSize="17dp"

                        />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/recently_played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:text="Recently played"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recently_played">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/recently_played"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:orientation="horizontal"
                android:padding="5dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:clickable="true"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/big_img_1"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/machine_gun_kelly" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/big_img_1"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:text="Machine Gun \nKelly"
                            android:textColor="#fff"
                            android:textSize="17dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="165dp"
                    android:layout_marginLeft="-5dp"
                    android:background="@null"
                    android:clickable="true"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/big_img_2"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/pink_guy" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/big_img_2"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:text="Pink Season"
                            android:textColor="#ffffff"
                            android:textSize="17dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="165dp"
                    android:layout_marginLeft="-5dp"
                    android:background="@null"
                    android:clickable="true"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/big_img_3"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/jbalvin_oasis" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/big_img_3"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:text="OASIS"
                            android:textColor="#ffffff"
                            android:textSize="17sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="165dp"
                    android:layout_marginLeft="-5dp"
                    android:background="@null"
                    android:clickable="true"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/big_img_4"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/blinding_lights" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/big_img_4"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:text="After Hours"
                            android:textColor="#ffffff"
                            android:textSize="17dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/made_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_scroll"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:text="Your favorite artists"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/made_for">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/recently_played"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:orientation="horizontal"
                android:padding="5dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="165dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:clickable="true"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/big_img_1.1"
